<?xml version="1.0" encoding="utf-8"?>

<template xml:space="preserve">
    <t t-name="TotemModeMenu">
        <div class="container-fluid" id="contenedorBackGround">
                <div class="row align-items-start" style="height:6.875vh;max-width: 1080px;">
                    <div class="col-lg-12 col-xl-12">
                        <div id="header">
                            <div class="o_totem_prueba_totem_mode_text_header">
                                <div id="headerTotem">
                                    <h1 id="title">
                                        <t t-esc="widget.event.name"/>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>    
            

            <div class="row justify-content-between align-items-center" style="max-width: 1080px;"> 
                
                <div class = "col-lg-1 col-xl-1">
                    <div id="o_totem_prueba_totem_mode_left_side">
                        <div class="botonera">
                            <button class="buttons" id="leftArrowButton">
                                <img src="/totem_prueba/static/src/img/left.png" id="leftArrow"/>
                            </button>
                        </div>
                    </div>
                </div>
               
                    <div class="col-lg-10 col-xl-10 align-self-center" id="centerColumn">
                            <div class="row justify-content-center" style="height:23vh;">
                                        <t t-if="widget.event.selector_banner=='pic'">
                                                <img id="banner" t-attf-src="{{'/web/image/totem_general.totem_general/' 
                                                    + (widget.event.id)
                                                    + '/banner/'}}"
                                                />
                                        </t>
                                        <t t-elif="widget.event.selector_banner=='video'">
                                            <iframe id="videobanner" t-attf-src="{{widget.event.banner_video + '?autoplay=1&amp;mute=1&amp;controls=0&amp;rel=0&amp;loop=1&amp;playlist=' + widget.event.video_id}}"></iframe>
                                        </t>
                                        <t t-if="widget.event.selector_banner=='rss'">
                                            <iframe id="rss_video" t-attf-src="{{widget.event.banner_rss}}"></iframe>
                                        </t>
                            </div>
                            <div class="row justify-content-end" style="height:10vh;padding-top:50px;">
                                <div id="QRBannerContainer">
                                    <img class="QR" id="QrBanner" t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.event.banner_url + '&amp;width=125&amp;height=125'}}"  
                                    />
                                </div>
                            </div>
                                
                            <div class="row justify-content-center" style="height:11vh;">
                                <div id="descriptionContent">
                                    <div id="description"><t t-esc="widget.event.description"/></div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div id="slideshowContent">
                                    <div id="slideshow">
                                         <t t-foreach="widget.event.image_ids" t-as="i">
                                            <div class="myImgSlider">
                                                <img id="imagenSlider" t-attf-src="{{'/web/image/image.image/' 
                                                + (i)
                                                + '/my_image/'}}"
                                                style="height:38vh;max-width:926.66px"
                                                />
                                            </div>
                                        </t>   
                                    </div>
                                </div>
                            </div>
                    </div>
                    
           
                <div class="col-lg-1">
                    <div id="o_totem_prueba_totem_mode_right_side">
                        <div class="botonera">
                            <button class="buttons" id="rightArrowButton">
                                <img src="/totem_prueba/static/src/img/right.png" id="rightArrow"/>
                            </button>
                        </div>
                    </div>
                </div>                  
            </div>
            
            <div class="o_totem_prueba_totem_mode_footer"/>
                 

            <div class="col-sm-8 col-lg-8 col-xl-8">
                <!-- MODAL -->                
                <div class="modal fade modal-perl" id="myPopUp" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content" id = "template1_pop_up">
                    
                                <div class="modal-header">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeButton">
                                        <img src="/totem_prueba/static/src/img/cross.png" id="crossImg" />
                                    </button>
                                </div>

                                <div class="modal-body">
                                    <div class = "container-fluid">
                                        <div class = "row">
                                            <div class="col-md-4 col-sm-4" >
                                                <img t-attf-src="{{'/web/image/totem_general.totem_general/' + widget.event.id + '/pop_up_image/'}}" style="width:200px;height:270px;margin-left: -9%;"/>
                                            </div>

                                        <!-- <div class="column" style="position:relative;width:400px"> -->
                                            <div class="col-md-8 col-sm-8" >
                                                <div class="row">
                                                    <p>
                                                        <h3 class="modal-title" id="exampleModalLongTitle">
                                                                 <t t-esc="widget.event.pop_up_product_name"/>
                                                         </h3>
                                                    </p>
                                                    <t t-esc="widget.event.pop_up_description"/> 
                                                </div>
                                                <div class="row justify-content-end">
                                                    <div id="QrPopUp">
                                                        <img class="QR" t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.event.pop_up_qr_url + '&amp;width=95&amp;height=90'}}"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-footer" id="cancelarContenedor">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelarButton">
                                       Cancelar 
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CIERRE DEL MODAL -->
        </div>
    </t>

    <t t-name="ConfigsData">
        <div class="row align-items-end" id="footer" style="height:6.875vh;max-width: 1080px;">
            <div class="col-lg-10 col-xl-10 align-self-center">
                <div id="footerText">
                    <div id="footerContent">
                        <t t-if="widget.company_description==''">
                           <!-- <p>Para más información, consulta este QR</p>-->
                        </t>
                        <t t-else="">
                            <p><t t-esc="widget.company_description"/></p>
                        </t>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-xl-2">
                <div id="QRFooterContainer" style="margin:0;float:left;width:180px;">
                    <img class="QR" t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.company_qr + '&amp;width=132&amp;height=132'}}" style="padding-left:40px;padding-right:8px;" 
                    />
                </div>
            </div>
        </div>
                    <style id="ModTemplates">
                        #contenedorBackGround {
                        <t t-if="widget.company_header_background=='' and widget.company_general_background=='' and widget.company_footer_background==''">
                            background: url('/totem_prueba/static/src/img/fondo.jpg') no-repeat fixed center;
                        </t>
                        <t t-elif="widget.company_general_background=='' and (widget.company_header_background!='' or widget.company_footer_background!='')">
                           background-color: transparent;
                        </t>
                        <t t-else="">
                            background: url('/web/image/res.company/1/company_general_background') no-repeat fixed center;
                        </t>
                           -webkit-background-size: cover;
                           -moz-background-size: cover;
                           -o-background-size: cover;
                           background-size: cover;
                            width: 100%;
                            height: 100%;
                        }

                        #description{
                            color: <t t-esc="widget.text_color_general"/>;
                        }

                        #header{
                            <t t-if="widget.company_header_background=='' and widget.company_general_background=='' and widget.company_footer_background==''">
                                background: url('/totem_prueba/static/src/img/header.jpg') no-repeat fixed center;
                            </t>
                            <t t-if="widget.company_header_background=='' and widget.company_general_background!=''">
                                background-color: transparent;
                            </t>
                            <t t-else="">
                                background: url('/web/image/res.company/1/company_header_background') no-repeat fixed center;
                            </t>
                               -webkit-background-size: cover;
                               -moz-background-size: cover;
                               -o-background-size: cover;
                               background-size: cover;
                               width:1080px;
                        }

                        #title{
                            color: <t t-esc="widget.text_color_header"/>;
                        }

                        #footer{
                            <t t-if="widget.company_header_background=='' and widget.company_general_background=='' and widget.company_footer_background==''">
                                background: url('/totem_prueba/static/src/img/footer.jpg') no-repeat fixed center;
                            </t>
                            <t t-elif="widget.company_footer_background=='' and widget.company_general_background!=''">
                                background-color: transparent;
                            </t>
                            <t t-else="">
                                background: url('/web/image/res.company/1/company_footer_background') no-repeat fixed center;
                            </t>
                           -webkit-background-size: cover;
                           -moz-background-size: cover;
                           -o-background-size: cover;
                           background-size: cover;
                           height:6.875vh;
                           width:100vw;
                        }

                        #footerContent{
                            color: <t t-esc="widget.text_color_footer"/>;
                            text-align:center;
                            padding-left:9.25%;                            
                        }
                    </style>
    </t>
</template> 


