<odoo>

  <!-- treeview totem -->
  <record model="ir.ui.view" id="view_totem_id">
    <field name="name">totem.tree</field>
    <field name="model">totem_general.totem_general</field>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
      <tree string="Event's List">
        <field name="name"/>
        <!-- <field name="banner"/> -->
        <field name="description"/>
        <field name="selector_banner"/>
        <field name="banner_url"/>
      </tree>
    </field>
  </record>

  <!-- formulario totem -->
  <record model="ir.ui.view" id="view_id_form">
    <field name="name">totem_general.form</field>
    <field name="model">totem_general.totem_general</field>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
      <form string="Formulario de eventos">
        <sheet>
          <group rowspan="4">
            <group rowspan="2" row="2">
              <field name="name" required="1"/>
              <field name="description"/>
            </group>
            <group rowspan="2" row="2">
              <field name="selector_banner"/>
              <field name="banner" attrs="{'invisible':[('selector_banner','!=','pic')]}"/>
              <field name="banner_video" attrs="{'invisible':[('selector_banner','!=','video')]}" widget="url"/>
              <field name="banner_rss" attrs="{'invisible':[('selector_banner','!=','rss')]}" widget="url"/>
              <field name="banner_url" widget="url"/>
            </group>
          </group>
          <notebook>
            <page string="Image Slider">
              <label for = "image_ids"/> 
              <field name = "image_ids" />
            </page>
            
            <page string="Pop-up's Information">
              <group rowspan="4">
                <group rowspan="2" row="2">
                    <field name= "pop_up_image" widget = "image" width = "150px" />
                </group>

                <group rowspan="2" row="2">
                    <field name="pop_up_product_name"/>
                    <field name="pop_up_description"/> 
                </group>
              </group>

              <group rowspan="2">
                <field name="pop_up_qr_url" widget="url"/> 
              </group>
            </page>

            <page string="Event's Date">
              <group rowspan="4">
                <field name = "my_event_dates"/>
              </group> 
            </page>

          </notebook>
        </sheet>
      </form>
    </field>
  </record>

<!-- vista del totem -->
  <record model="ir.actions.act_window" id="totem_list_action">
    <field name="name">Vista de los Eventos</field>
    <field name="res_model">totem_general.totem_general</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling-face">No hay t√≠tulos</p>
    </field>
  </record>

  <menuitem id="prueba_menu" name="Eventos" parent="main_menu" action="totem_list_action"/>  
</odoo>