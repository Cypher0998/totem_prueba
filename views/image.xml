<odoo>

  <!-- treeview curso -->
  <record model="ir.ui.view" id="view_image_id">
    <field name="name">image.tree</field>
    <field name="model">image.image</field>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
      <tree string="Lista de im치genes">
        <field name="my_image" widget = "image" width = "150px" height = "150px"/>
        <field name="name" width = "30px"/>
      </tree>
    </field>
  </record>

  <!-- formulario para ls im치genes -->
  <record model="ir.ui.view" id="view_id_image_form">
    <field name="name">image.form</field>
    <field name="model">image.image</field>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
      <form string="Formulario de eventos">
        <sheet>
          <group>
            <field name="name" required="1"/>
            <field name="my_image" required="1" widget = "image" width = "75px" height = "75px"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

<!-- vista de los cursos -->
  <record model="ir.actions.act_window" id="image_list_action">
    <field name="name">Vista de las Im치genes</field>
    <field name="res_model">image.image</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>
  <!-- <menuitem id="lista_imagenes" name="Lista de im치genes" parent="main_menu" action="image_list_action"/> -->
</odoo>